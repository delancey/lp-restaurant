<h1>LOOKOUT POINT MENU </h1>
<div class ="row">
  <% @menus.each do |menu| %>
  <div class ="col-sm-6 col-md-4">
  	<div class = "thumbnail pull-left"> 
      <img src ="<%= menu.image %>">
			<div class = "caption">
				<h4><%= menu.name %></h4>
				<h5><%= menu.course %></h5>
				<h4>Cost: $<%= menu.price %></h4>
				<hr>
 				<br>
 <%= link_to "More info", menu, class: "btn btn-default" %>
  
			</div>
		</div>
	</div>
	<% end %>
</div>

<br>
<div class = "bottom ">
<%= link_to 'New Menu Item', new_menu_path, class: "btn btn-default" %>
</div>
